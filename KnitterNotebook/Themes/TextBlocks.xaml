<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="BasicTextBlock" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="Height" Value="Auto" />
        <Setter Property="Width" Value="Auto" />
    </Style>

    <Style
        x:Key="WelcomeTextBlock"
        BasedOn="{StaticResource BasicTextBlock}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="35" />
    </Style>

    <Style
        x:Key="WrapTextBlock"
        BasedOn="{StaticResource BasicTextBlock}"
        TargetType="TextBlock">
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style
        x:Key="SettingsHeaderTextBlock"
        BasedOn="{StaticResource BasicTextBlock}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource SettingsHeaderFontSize}" />
    </Style>

    <Style
        x:Key="SettingsElementTextBlock"
        BasedOn="{StaticResource BasicTextBlock}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource SettingsElementFontSize}" />
        <Setter Property="TextAlignment" Value="Left" />
    </Style>
</ResourceDictionary>