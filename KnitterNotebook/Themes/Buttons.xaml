<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Fonts.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="LoginButton" TargetType="Button">
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="25" />
            </Style>
        </Style.Resources>
        <Setter Property="FontSize" Value="{StaticResource LoginButtonFontSize}" />
        <Setter Property="Height" Value="50" />
    </Style>

    <Style x:Key="MainMenuButton" TargetType="Button">
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="5" />
            </Style>
        </Style.Resources>
        <Setter Property="FontSize" Value="{StaticResource MainMenuButtonFontSize}" />
        <Setter Property="Height" Value="40" />
        <Setter Property="Width" Value="160" />
        <Setter Property="Margin" Value="5,5,5,5" />
    </Style>

    <Style x:Key="SettingsButton" TargetType="Button">
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="5" />
            </Style>
        </Style.Resources>
        <Setter Property="FontSize" Value="{StaticResource LoginButtonFontSize}" />
        <Setter Property="Height" Value="60" />
        <Setter Property="Width" Value="200" />
        <Setter Property="Margin" Value="5,5,5,5" />
    </Style>
</ResourceDictionary>