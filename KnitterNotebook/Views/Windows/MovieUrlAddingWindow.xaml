<Window
    x:Class="KnitterNotebook.Views.Windows.MovieUrlAddingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adorners="http://gu.se/Adorners"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:KnitterNotebook.ViewModels"
    Title="KnitterNotebook"
    Width="500"
    Height="550"
    d:DataContext="{d:DesignInstance Type=viewModels:MovieUrlAddingViewModel}"
    Style="{DynamicResource WindowStyle}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding AddMovieUrlCommandAsync}" />
    </Window.InputBindings>
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,30,0,50">
                <TextBlock Style="{DynamicResource WelcomeTextBlockStyle}" Text="Dodanie linku do filmu" />
            </Grid>

            <Grid Grid.Row="1">
                <StackPanel Margin="50,10,50,10">
                    <Label Content="Tytuł filmu" Style="{DynamicResource LabelAboveLoginInputStyle}" />
                    <DockPanel Margin="0,0,0,10">
                        <materialDesign:PackIcon
                            Margin="5,0,5,0"
                            VerticalAlignment="Center"
                            Kind="FormatTitle" />
                        <TextBox
                            adorners:Watermark.Text="Tytuł"
                            adorners:Watermark.VisibleWhen="EmptyAndNotKeyboardFocused"
                            Style="{DynamicResource InputLoginDataTextBoxStyle}"
                            Text="{Binding Title, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </DockPanel>
                    <Label Content="Link do filmu" Style="{DynamicResource LabelAboveLoginInputStyle}" />
                    <DockPanel Margin="0,0,0,10">
                        <materialDesign:PackIcon
                            Margin="5,0,5,0"
                            VerticalAlignment="Center"
                            Kind="Link" />
                        <TextBox
                            adorners:Watermark.Text="Link"
                            adorners:Watermark.VisibleWhen="EmptyAndNotKeyboardFocused"
                            Style="{DynamicResource InputLoginDataTextBoxStyle}"
                            Text="{Binding Link, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </DockPanel>
                    <Button
                        Margin="0,10,0,0"
                        Command="{Binding AddMovieUrlCommandAsync}"
                        Content="Dodaj film"
                        Style="{DynamicResource LoginButtonStyle}" />
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>