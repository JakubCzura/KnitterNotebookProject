<UserControl x:Class="KnitterNotebook.Views.UserControls.SamplesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:KnitterNotebook.Views.UserControls"
             xmlns:viewModels="clr-namespace:KnitterNotebook.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.7*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Margin="5,5,5,5" BorderBrush="AliceBlue" BorderThickness="2" CornerRadius="10">
                <Border Background="#FFBA6FCA" BorderThickness="0" CornerRadius="10">

                    <DataGrid Margin="5,5,5,5" 
                              Style="{StaticResource MaterialDesignDataGrid}" Grid.Column="0" 
                  ItemsSource="{Binding Samples}" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True" 
                  SelectedItem="{Binding SelectedSample}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Yarn name" 
                                    Binding="{Binding Path=YarnName}" 
                                    Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                </Border>
            </Border>
            <Border Grid.Column="1" Margin="5,5,5,5" BorderBrush="AliceBlue" BorderThickness="2" CornerRadius="10">
                <Border Background="#FFBA6FCA" BorderThickness="0" CornerRadius="10">
                    <StackPanel Margin="5,5,5,5" >
                        <TextBlock TextWrapping="Wrap" FontWeight="Medium" Margin="5,0,5,0" FontSize="20" Text="Yarn name:"/>
                        <TextBlock TextWrapping="Wrap" Margin="5,0,5,5" FontSize="15" Text="{Binding SelectedSample.YarnName}"/>
                        <TextBlock TextWrapping="Wrap" FontWeight="Medium" Margin="5,0,5,0" FontSize="20" Text="Loops x rows:"/>
                        <TextBlock TextWrapping="Wrap" Margin="5,0,5,5" FontSize="15" Text="{Binding SelectedSampleMashesXRows}"/>
                        <TextBlock TextWrapping="Wrap" FontWeight="Medium" Margin="5,0,5,0" FontSize="20" Text="Needle size:"/>
                        <TextBlock TextWrapping="Wrap" Margin="5,0,5,5" FontSize="15" Text="{Binding SelectedSampleNeedleSize}"/>
                        <TextBlock TextWrapping="Wrap" FontWeight="Medium" Margin="5,0,5,0" FontSize="20" Text="Description:"/>
                        <TextBlock TextWrapping="Wrap" Margin="5,0,5,5" FontSize="15" Text="{Binding SelectedSample.Description}"/>
                    </StackPanel>
                </Border>
            </Border>
            <Border Margin="5,5,5,5" Grid.Column="3" BorderBrush="AliceBlue" BorderThickness="2" CornerRadius="10">
                <Border Background="#FFBA6FCA" BorderThickness="0" CornerRadius="10">
                    <Image Margin="5,5,5,5" Source="C:\Users\czura\Desktop\20161223_192114.jpg"/>
                </Border>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>