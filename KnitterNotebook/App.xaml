<Application x:Class="KnitterNotebook.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:KnitterNotebook"
    StartupUri="Views/Windows/LoginWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/CommonStyles.xaml" />
                <ResourceDictionary Source="Themes/TextBlocks.xaml" />
                <ResourceDictionary Source="Themes/Labels.xaml" />
                <ResourceDictionary Source="Themes/DefaultMode.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
